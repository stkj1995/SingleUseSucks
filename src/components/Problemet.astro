  <style>

    .container {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .center {
      font-size: 24px;
font-weight: lighter;
      text-align: center;
    }

    /* Position elements around the circle */
    .item {
      position: absolute;
      width: 20%; /* Adjust as needed */
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }

    /* Circular positions */
    .item1 { top: 10%; left: 40%; transform: translate(-50%, -20px); }
    .item2 { top: 20%; left: 70%; transform: translate(-20px, -50%); }
    .item3 { bottom: 20%; left: 70%; transform: translate(-50%, 20px); }
    .item4 { bottom: 7%; left: 40%; transform: translate(-50%, 20px); }
    .item5 { top: 50%; left: 15%; transform: translate(20px, -50%); }
    .item6 { top: 10px; left: 30%; transform: translate(-50%, -20px); }

    /* When visible */
    .visible {
      opacity: 1;
      transform: translateY(0);
    }

    .item img {
      margin-bottom: 10px;
    }
  </style>


<script>
    const items = document.querySelectorAll('.item');

    const observer = new IntersectionObserver(entries => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          // Delay each item based on its index for a staggered effect
          setTimeout(() => {
            entry.target.classList.add('visible');
          }, index * 200); // 200ms delay between each item
          observer.unobserve(entry.target); // Stop observing once the item is visible
        }
      });
    }, {
      threshold: 0.5
    });

    items.forEach(item => {
      observer.observe(item);
    });
  </script>

