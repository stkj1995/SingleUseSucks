---
import NewButton from './NewButton.astro';
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import pose from "../assets/images/pose.png";
import maelk from "../assets/images/maelk.png";
import balloons from "../assets/images/balloons.png";
import creme from "../assets/images/creme.png";
import drikkedrunk from "../assets/images/drikkedunk.png";
import sadsmiley from "../assets/images/sadsmiley.png";
import tshirt from "../assets/images/tshirt.png";
import worldcleanuplogo from "../assets/images/worldcleanuplogo.png";
import flueben from "../assets/images/flueben.png";
import tal1 from "../assets/images/1.png";
import tal2 from "../assets/images/2.png";
import tal3 from "../assets/images/3.png";
import tal4 from "../assets/images/4.png";
import tal5 from "../assets/images/5.png";
import tal6 from "../assets/images/6.png";
import tal6hvid from "../assets/images/6hvid.png";
import { animate } from 'motion';
import "../styles/tobii.min.css"; 
---

<article class="bg-darkblue w-screen md:w-screen mx-auto text-white"></div>
    <section id="overskrift-og-brodtekst" class="flex flex-col md:flex-row gap-8 md:gap-10 mx-auto max-w-screen-xl">  
        <h2 id="scroll-header" class="text-2xl font-bold md:text-4xl lg:text-8xl md:text-right ml-10 mr-10 md:mt-20">
            Hvordan kan du som forbruger selv bidrage?
        </h2>
        
            <section id="horisontalscrollsection" class="h-[500vw]">
                <ul id="horisontalliste" class="list-none pl-0 flex sticky top-[10vh]">
                    <figure class="flex flex-row max-w-[300px]">
                        <Image src={tal1} class="w-5/6" alt="foto" />
                    </figure>
                    <li class="pl-0 flex w-[100vw] items-start justify-center flex-col">
                        <figcaption class="pl-4 w-full md:w-1/3 md:mb-14">
                            World Cleanup Day er et globalt handlekraftigt fællesskab med et formål om at gøre verden renere. <br /> I 2022 deltog flere end <span class="font-bold">15 mio mennesker fra 190 lande</span>, og tilsammen blev der samlet <span class="font-bold">min. 60 tons affald</span>. <br /><br />Vær en del af World Cleanup Day, og vær med til at gøre en forskel.
                        </figcaption>
                        <figure class="flex flex-row max-w-[300px]">
                            <Image src={worldcleanuplogo} class="w-5/6 md:mb-8" alt="foto" />
                        </figure>
                        <a href="https://worldcleanupday.dk/" target="_blank" rel="noopener noreferrer">
                            <NewButton className="ml-16">Deltag her</NewButton>
                        </a>                        
                    </li>
        
                    <figure class="flex flex-row max-w-[300px]">
                        <Image src={tal6hvid} class="md:w-96 md:h-72 md:mt-40" alt="foto" />
                    </figure>
                    <li class="pl-0 flex w-[100vw] items-start justify-center flex-col">
                        <h2 class="pl-4 text-4xl md:text-7xl w-full md:w-1/3 text-white text-wrap">
                            gode <br /> tips <br /> mod <br /> plastikspild
                        </h2>
                    </li>
        
                    <section class="tal1og2">
                        <li class="flex w-[100vw] items-start justify-center flex-col flex-grow-0 flex-shrink-0 flex-auto">
                            <figure class="flex flex-row items-start max-w-[300px] mt-10">
                                <!-- Tal 1 til venstre -->
                                <div class="flex flex-col items-start pl-4">
                                    <Image src={tal1} class="md:w-16 md:h-38 md:ml-14 mr-14" alt="foto" />
                                </div>
                    
                                <!-- Pose til højre -->
                                <div class="flex flex-col items-start pl-8">
                                    <Image src={pose} class="md:w-20 md:h-36 ml-24 animate-pulse" alt="Indkøbspose" />
                                    <figcaption class="w-full md:w-1/3 text-nowrap mt-5">
                                        <span class="font-bold">Dit indkøb</span> <br />
                                        <span class="font-roboto-light">Tag mulepose med og sig nej tak til plastikposer</span>
                                    </figcaption>
                                </div>
                            </figure>
                        </li>
                    
                        <li class="flex w-[100vw] items-start justify-center flex-col flex-grow-0 flex-shrink-0 flex-auto mt-10">
                            <figure class="flex flex-row items-start max-w-[300px] mt-10">
                                <!-- Tal 2 til venstre -->
                                <div class="flex flex-col items-start">
                                    <Image src={tal2} class="md:w-30 md:h-38 md:ml-10 mr-24 mt-12" alt="foto" /> <!-- Ensartet styling -->
                                </div>
                    
                                <!-- Drikkedunk, flueben og figcaption til højre -->
                                <div class="flex flex-col items-start pl-14">
                                    <!-- Drikkedunk og flueben -->
                                    <div class="flex flex-col items-center pl-10">
                                        <Image src={flueben} class="md:w-12 md:h-12 ml-20 animate-pulse" alt="Flueben" />
                                        <Image src={drikkedrunk} class="md:w-11 md:h-36 animate-pulse" alt="Drikkedunk" />
                                    </div>
                    
                                    <!-- Figcaption under billeder -->
                                    <figcaption class="w-full md:w-1/3 text-nowrap mt-5">
                                        <span class="font-bold">Din vandflaske</span> <br>
                                        <span class="font-roboto-light">Brug drikkedunk og undgå købevand</span>
                                    </figcaption>
                                </div>
                            </figure>
                        </li>
                    </section>
        
                    <section class="tal3og4">
                        <li class="flex w-[100vw] items-start justify-center flex-col flex-grow-0 flex-shrink-0 flex-auto">
                            <figure class="flex flex-row items-start max-w-[800px] mt-12">
                                <!-- Tal 3 til venstre -->
                                <div class="flex flex-col items-start">
                                    <Image src={tal3} class="md:w-36 md:h-48 md:ml-5 mt-5" alt="foto" />
                                </div>
        
                                <!-- Mælk til højre -->
                                <div class="flex flex-col items-start pl-10">
                                    <Image src={maelk} class="md:w-16 md:h-32 ml-16 animate-pulse" alt="Mælk" />
                                    <figcaption class="w-full md:w-1/3 text-nowrap mt-5">
                                        <span class="font-bold">Din mælk</span> <br />
                                        <span class="font-roboto-light">Køb mælk uden skruelåg</span>
                                    </figcaption>
                                </div>
                            </figure>
                        </li>
        
                        <li class="flex w-[100vw] items-start justify-center flex-col flex-grow-0 flex-shrink-0 flex-auto">
                            <figure class="flex flex-row items-start max-w-[300px] justify-between">
                                <!-- Tal 4 til venstre -->
                                <div class="flex flex-col items-start">
                                    <Image src={tal4} class="md:w-64 md:h-56 mr-20 mt-20" alt="foto" />
                                </div>
                            
                                <!-- Balloner og smiley til højre -->
                                <div class="flex flex-col items-center justify-center mt-20">
                                    <div class="flex items-center">
                                        <Image src={balloons} class="md:w-22 md:h-22 ml-16 animate-pulse" alt="Balloner" />
                                        <Image src={sadsmiley} class="md:w-10 md:h-10 animate-pulse" alt="Trist smiley" />
                                    </div>
                                </div>
                            </figure>
                            
                            <!-- Figcaption skal nu være under figure -->
                            <figcaption class="pl-4 w-full md:w-1/3 text-nowrap md:ml-48 text-left">
                                <span class="font-bold">Din fest</span> <br />
                                <span class="font-roboto-light">Drop engangsservice, balloner og sugerør</span>
                            </figcaption>
                        </li>
                    </section>
                    
                    <section class="tal5og6">
                        <li class="flex w-[100vw] items-start justify-center flex-col flex-grow-0 flex-shrink-0 flex-auto">
                            <figure class="flex flex-row items-start max-w-[800px] mt-12">
                                <!-- Tal 5 til venstre -->
                                <div class="flex flex-col items-start">
                                    <Image src={tal5} class="md:w-32 md:h-44 md:ml-12" alt="foto" />
                                </div>
        
                                <!-- Tshirt til højre -->
                                <div class="flex flex-col items-start">
                                    <Image src={tshirt} class="md:w-40 md:h-36 ml-20 animate-pulse" alt="Tshirt" />
                                    <figcaption class="w-full md:w-1/3 text-nowrap md:ml-6 mt-5">
                                        <span class="font-bold">Din tøjvask</span> <br />
                                        <span class="font-roboto-light">Fyld maskinen, så du slider mindre på tøjet</span>
                                    </figcaption>
                                </div>
                            </figure>
                        </li>
        
                        <li class="flex w-[100vw] items-start justify-center flex-col flex-grow-0 flex-shrink-0 flex-auto">
                            <figure class="flex flex-row items-center max-w-[300px] mt-10">
                                <!-- Tal 6 til venstre -->
                                <div class="flex flex-col items-start">
                                    <Image src={tal6} class="md:w-96 md:h-52 md:ml-5 mt-10" alt="foto" />
                                </div>
        
                                <!-- Plejeprodukter -->
                                <div class="flex flex-col items-start">
                                    <Image src={creme} class="md:w-60 md:h-32 md:ml-3 " alt="creme" />
                                </div>
                            </figure>
        
                            <!-- Figcaption skal nu være under figure -->
                            <figcaption class="pl-4 w-full md:w-1/3 text-nowrap text-left md:ml-48">
                                <span class="font-bold">Dine plejeprodukter</span> <br />
                                <span class="font-roboto-light">Vælg produkter uden mikroplast</span>
                            </figcaption>
                        </li>
                    </section>
                </ul>
            </section>
        </div>
    </section>
</article>

<script>
    /* Import af Motion One biblioteket */
    import { animate, scroll } from '@motionone/dom';

    document.addEventListener('DOMContentLoaded', () => {
        // Horisontal scroll sektion
        const horizontalList = document.querySelector("#horisontalliste");
        const horizontalScrollSection = document.querySelector("#horisontalscrollsection");
        const scrollHeader = document.querySelector("#scroll-header");

        if (horizontalList && horizontalScrollSection && scrollHeader) {
            // Animerer horisontal liste ved scroll
            scroll(
                animate(horizontalList, {
                    transform: ["none", "translateX(-500vw)"]
                }),
                { target: horizontalScrollSection }
            );

            // Animerer overskriften ved scroll
            scroll(
                animate(scrollHeader, {
                    transform: ["none", "translateX(-10000vw)"] // Juster værdien for at matche scrolling
                }),
                { target: horizontalScrollSection }
            );
        }
    });
</script>




