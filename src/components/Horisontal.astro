import tal6hvid from "../assets/images/6hvid.png";
import { animate } from 'motion';
import "../styles/tobii.min.css"; 
---
<!-- Baggrundsfarve -->
<article class="bg-darkblue w-screen mx-auto text-white">
    <section id="overskrift-og-brodtekst" class="flex flex-col md:flex-row gap-8 md:gap-10 mx-auto mb-10 max-w-screen-xl">  
        <div class="flex-1 mb-6 flex justify-center md:justify-end">
            <h2 class="text-2xl font-bold md:text-4xl lg:text-6xl text-center md:text-right ml-10 mr-10 md:mt-20">
                Hvordan kan du som forbruger selv bidrage?
            </h2>
        </div>

        <div class="overflow-clip mt-16">
            <section id="horisontalscrollsection" class="h-[500vw]">
                <ul id="horisontalliste" class="list-none pl-0 flex sticky top-[10vh]">
                    <figure class="flex flex-row max-w-[300px]">
                        <Image src={tal1} class="w-5/6" alt="foto" />
                    </figure>
                    <li class="pl-0 flex w-[100vw] items-start justify-center flex-col overflow-hidden">
                        <figcaption class="pl-4 w-1/3 md:mb-14">
                            World Cleanup Day er et globalt handlekraftigt fællesskab med et formål om at gøre verden renere. 
                            I 2022 deltog flere end 15 mio mennesker fra 190 lande, og tilsammen blev der samlet min. 60 tons affald. Vær en del af World Cleanup Day, og vær med til at gøre en forskel.
                        </figcaption>
                        <figure class="flex flex-row max-w-[300px] ">
                            <Image src={worldcleanuplogo} class="w-5/6 md:mb-8" alt="foto" />
                        </figure>
                        <NewButton>Deltag her</NewButton>
                    </li>
                    
                    <figure class="flex flex-row max-w-[300px]">
                        <Image src={tal6hvid} class="md:w-44 md:h-44 md:mt-52" alt="foto" />
                    </figure>
                    <li class="pl-0 flex w-[100vw] items-start justify-center flex-col overflow-hidden">
                        <h2 class="pl-4 text-5xl w-1/3 text-white text-wrap">
                          gode <br> tips <br> mod <br> plastikspild
                        </h2>                       
                    </li>
                
                    <section class="tal1og2">
                        <li class="flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto">
                            <figure class="flex flex-row items-start max-w-[800px] mt-12">
                                <!-- Tal 1 til venstre -->
                                <div class="flex flex-col items-start">
                                    <Image src={tal1} class="md:w-14 md:h-38 md:ml-5" alt="foto" />
                                </div>
                                
                                <!-- Pose til højre -->
                                <div class="flex flex-col items-start pl-4">
                                    <Image src={pose} class="md:w-14 md:h-24" alt="Indkøbspose" />
                                    <figcaption class="w-1/3 text-nowrap" >
                                        <span class="font-bold">Din vandflaske</span> <br><br>
                                        <span class="font-roboto-light">Brug drikkedunk og undgå købevand</span>
                                    </figcaption>
                                </div>
                            </figure>
                        </li>
                        
                        <li class="flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto mt-10">
                            <figure class="flex flex-row items-center max-w-[300px] mt-10">
                                <!-- Tal 2 til venstre -->
                                <div class="flex flex-col items-start">
                                    <Image src={tal2} class="md:w-32 md:h-44 md:ml-5" alt="foto" />
                                </div>
                        
                                <!-- Drikkedunk og flueben -->
                                <div class="flex flex-col items-center">
                                    <Image src={flueben} class="md:w-12 md:h-12 ml-4" alt="Flueben" />
                                    <Image src={drikkedrunk} class="md:w-11 md:h-36 " alt="Drikkedunk" />
                                </div>
                            </figure>
                        
                            <!-- Figcaption skal nu være under figure -->
                            <figcaption class="pl-4 w-1/3 text-nowrap mt-2 text-center">
                                <span class="font-bold">Din vandflaske</span> <br><br>
                                <span class="font-roboto-light">Brug drikkedunk og undgå købevand</span>
                            </figcaption>
                        </li>
                        
                    </section>
                    


                <!-- <li class="flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[300px]"><Image src={creme} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Scannede billeder, der fanger minderne fra fortiden på ny.</figcaption></figure></li>
                <li class="pl-0 flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[100px]"><Image src={drikkedrunk} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Lysspredning fra kameraet giver billederne en drømmende effekt.</figcaption></figure></li>
                <li class="flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[300px]"><Image src={sadsmiley} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Et prisvenligt objektiv, der gør det muligt at tage fantastiske billeder.</figcaption></figure></li>
                <li class="flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[300px]"><Image src={tshirt} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Dette foto er skudt med Canon EOS, en klassiker blandt fotografer for dens kvalitet og pålidelighed.</figcaption></figure></li>
                <li class="flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[300px]"><Image src={pose} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Scannede billeder, der fanger minderne fra fortiden på ny.</figcaption></figure></li> -->
                </ul>
            </section>
        </div>
    </section>
</article>

<script>
    /* Import af Motion One biblioteket */
    import { animate, scroll, inView as motionInView } from '@motionone/dom';

    document.addEventListener('DOMContentLoaded', () => {
        // Horisontal scroll sektion
        const horizontalList = document.querySelector("#horisontalliste");
        const horizontalScrollSection = document.querySelector("#horisontalscrollsection");

        if (horizontalList && horizontalScrollSection) {
            // Animerer horisontal liste ved scroll
            scroll(
                animate(horizontalList, {
                    transform: ["none", "translateX(-500vw)"]
                }),
                { target: horizontalScrollSection }
            );
        }

        // inView animation for header
        motionInView('#entrance-header', ({ target }) => {
            animate(target, { opacity: 1, y: 0 }, { duration: 1 });
        });

        // inView animations for beskrivelse
        motionInView('#entrance-description', ({ target }) => {
            animate(target, { opacity: 1, y: 0 }, { duration: 1 });
        });
    });
</script>


