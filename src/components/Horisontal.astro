---
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import pose from "../assets/images/pose.png";
import maelk from "../assets/images/maelk.png";
import balloons from "../assets/images/balloons.png";
import creme from "../assets/images/creme.png";
import drikkedrunk from "../assets/images/drikkedunk.png";
import sadsmiley from "../assets/images/sadsmiley.png";
import tshirt from "../assets/images/tshirt.png";
import worldcleanuplogo from "../assets/images/worldcleanuplogo.png";

import { animate } from 'motion';
import "../styles/tobii.min.css"; 
---
<section id="Overskrift og brødtekst" class="flex flex-col md:flex-row gap-8 md:gap-10 mx-auto mb-10 max-w-screen-xl">
    <div class="flex-1 mb-6 flex justify-center md:justify-end">
        <h2 class="text-2xl font-bold md:text-4xl lg:text-5xl text-center md:text-right ml-10 mr-10">Hvordan kan du som forbruger selv bidrage?</h2>
    </div>
</section>

<div class="overflow-clip mt-16">
    <section id="horisontalscrollsection" class="h-[400vw]">
        <ul id="horisontalliste" class="list-none pl-0 flex sticky top-[10vh]">
        <li class="pl-0 flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[300px]"><Image src={pose} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Lysspredning fra kameraet giver billederne en drømmende effekt.</figcaption></figure></li>
        <li class="flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[200px]"><Image src={maelk} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Et prisvenligt objektiv, der gør det muligt at tage fantastiske billeder.</figcaption></figure></li>
        <li class="flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[300px]"><Image src={balloons} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Dette foto er skudt med Canon EOS, en klassiker blandt fotografer for dens kvalitet og pålidelighed.</figcaption></figure></li>
        <li class="flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[300px]"><Image src={creme} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Scannede billeder, der fanger minderne fra fortiden på ny.</figcaption></figure></li>
        <li class="pl-0 flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[100px]"><Image src={drikkedrunk} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Lysspredning fra kameraet giver billederne en drømmende effekt.</figcaption></figure></li>
        <li class="flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[300px]"><Image src={sadsmiley} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Et prisvenligt objektiv, der gør det muligt at tage fantastiske billeder.</figcaption></figure></li>
        <li class="flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[300px]"><Image src={tshirt} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Dette foto er skudt med Canon EOS, en klassiker blandt fotografer for dens kvalitet og pålidelighed.</figcaption></figure></li>
        <li class="flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[300px]"><Image src={worldcleanuplogo} class="w-5/6" alt="foto" /><figcaption class="pl-4 italic w-1/3">Scannede billeder, der fanger minderne fra fortiden på ny.</figcaption></figure></li>
        </ul>
    </section>
</div>

<script>
    /* Import af Motion One biblioteket */
    import { animate, scroll, inView as motionInView } from '@motionone/dom';

    document.addEventListener('DOMContentLoaded', () => {
        // Horisontal scroll sektion
        const horizontalList = document.querySelector("#horisontalliste");
        const horizontalScrollSection = document.querySelector("#horisontalscrollsection");

        if (horizontalList && horizontalScrollSection) {
            // Animerer horisontal liste ved scroll
            scroll(
                animate(horizontalList, {
                    transform: ["none", "translateX(-500vw)"]
                }),
                { target: horizontalScrollSection }
            );
        }

        // inView animation for header
        motionInView('#entrance-header', ({ target }) => {
            animate(target, { opacity: 1, y: 0 }, { duration: 1 });
        });

        // inView animations for beskrivelse
        motionInView('#entrance-description', ({ target }) => {
            animate(target, { opacity: 1, y: 0 }, { duration: 1 });
        });
    });
</script>


