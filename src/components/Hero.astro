---
import { Image } from 'astro:assets';
import MainLayout from "../layouts/MainLayout.astro";
import herobaggrund from "../assets/images/herobaggrund.webp";
import heroturtle from "../assets/images/heroturtleny.png";
---

<section class="relative grid grid-cols-5 grid-rows-5 w-screen h-screen">
    <!-- Logo with animation -->
    <div x-data="{ bobble: false }" x-init="bobble = true" 
         class="absolute top-4 left-4 z-20">
        <img 
            src="/logo.png" 
            alt="Logo" 
            class="h-24 w-auto"
            @mouseenter="bobble = !bobble" 
            :class="bobble ? 'animate-bobble' : ''">
    </div>

    <!-- Background and Hero Content -->
    <Image src={herobaggrund} class="col-start-1 col-span-5 row-start-1 row-span-5 z-0 h-full md:w-full md:object-cover" alt="" />
    <Image src={heroturtle} class="col-start-4 col-span-2 row-start-2 row-span-2 animate-swim z-10 object-contain" alt="" />
    
    <div class="col-start-1 row-start-4 col-span-5 md:col-start-2 md:col-span-3 md:row-start-4 md:row-span-2 z-20 mt-16">
        <h1 class="text-5xl md:text-8xl animate__animated animate__fadeInUp">#SingleUseSucks</h1>
        <h2 class="text-3xl md:text-5xl animate__animated animate__fadeInUp">Beskyt vores verden mod plastikforurening nu!</h2>
    </div>
</section>


<style>
@keyframes swim {
  0% {
    transform: translate(0, 0) rotate(0deg);
  }
  25% {
    transform: translate(-15vw, -10vh) rotate(15deg);
  }
  50% {
    transform: translate(-7vw, 5vh) rotate(-15deg);
  }
  75% {
    transform: translate(5vw, 10vh) rotate(10deg);
  }
  100% {
    transform: translate(0, 0) rotate(0deg);
  }
}

.animate-swim {
  animation: swim 10s infinite linear;
}


</style>

