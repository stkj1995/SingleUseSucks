---
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import "../styles/tobii.min.css"; 
import { animate } from 'motion';
---
<!-- Bubbles Container -->
<div class="fixed top-1/2 right-0 transform -translate-y-1/2 flex flex-col items-end z-10">
  <img src="/boble_v.svg" alt="Bubbles" class="w-16 h-16 animate-pulse" /> 
  <img src="/boble_h.svg" alt="Bubbles" class="w-20 h-20 animate-pulse" /> 
  <img src="/boble_v.svg" alt="Bubbles" class="w-16 h-16 animate-pulse" />  
  <img src="/boble_h.svg" alt="Bubbles" class="w-16 h-16 animate-pulse" /> 
</div>

<div class="bg-lightblue w-screen md:w-screen mx-auto">
  <article class="container mx-auto px-5 py-5">
    <section id="Overskrift og brødtekst" class="flex flex-col md:flex-row gap-8 md:gap-10 mx-auto mb-10 max-w-screen-xl">
      <div class="flex-1 mb-6">
        <h2 class="text-2xl font-bold md:text-4xl lg:text-8xl ml-20 md:ml-[120px] md:mt-20 md:mb-30 lg:ml-[150px] xl:ml-[180px] mr-12 text-darkblue">
          Hvordan <br> skaber <br> Plastic Change <br> en <br> <span class="text-orange">forskel</span>?
        </h2>        
      </div>
      
      <div class="flex-1 md:ml-8 lg:ml-60">
        <p class="text-base md:text-lg mx-auto max-w-xs md:max-w-md lg:max-w-2xl md:mt-20">
          Langt størstedelen af din støtte går til <span class="font-bold">hav- og miljøindsatser</span>, hvor vi arbejder for at mindske plastikforurening – både i Danmark og internationalt. Vi gør dette gennem <span class="font-bold">oplysning, vidensdeling, events, undervisning og foredrag.</span> Vores mål er at mobilisere og engagere en større Plastic Changer-bevægelse, der allerede er godt i gang.
          <br><br>
          Vi står også i spidsen for <span class="font-bold">årlige oprydninger</span> i naturen, hvor vi samarbejder med andre organisationer fra hele verden for at skabe en <span class="font-bold">renere planet.</span>
        </p>
      </div>
    </section>

    <div class="flex flex-col md:flex-row gap-8 md:gap-10 mx-auto max-w-screen-xl ml-12">
      <section id="Farvede bobler med forklarende tekst" class="flex items-start gap-4 md:gap-8 mt-10 md:mt-60 ml-5 lg:ml-32 xl:ml-40">
        <img src="/farver.webp" alt="Illustration af Plastic Change" class="w-1/3 max-w-[20px] animate-pulse md:max-w-[40px]"> 
        
        <div class="flex flex-col justify-start space-y-4 md:space-y-14 md:w-1/2 text-nowrap"> 
          <p class="text-sm md:text-base font-bold">Hav- og miljøindsatser (70%)</p>
          <p class="text-sm md:text-base font-bold">Fundraising og indsamlinger (22%)</p>
          <p class="text-sm md:text-base font-bold">Projektstyring og administration (8%)</p>
        </div>
      </section>

      <section id="Animationer" class="space-y-8 md:space-y-10 p-4 md:p-10 md:ml-44 flex-1">
        <!-- Animation 1: Fisk -->
        <div
        x-data="{ visible: false }"
        x-intersect:enter="visible = true"
        x-bind:class="{ 
            'opacity-100 translate-x-0 scale-100 animate__animated animate__fadeInRight fish-animation': visible, 
            'opacity-0 translate-x-full scale-90': !visible 
        }" 
        class="flex items-center space-x-4 transition duration-3000 ease-out transform opacity-0 translate-x-full scale-90"
        >
        <img src="/fisk_datavis_70.webp" alt="Fisk" class="w-2/3 h-2/3 md:w-70p md:h-70p ml-10 lg:ml-32 xl:ml-40" />
        </div>
      
        <!-- Animation 2: Hjerte -->
        <div
          x-data="{ visible: false }"
          x-intersect:enter="visible = true"
          x-bind:class="{ 
              'opacity-100 translate-y-0 scale-110 animate__animated animate__pulse animate__infinite': visible, 
              'opacity-0 -translate-y-full scale-90': !visible 
          }" 
          class="flex items-center space-x-4 transition duration-4000 ease-out transform opacity-0 -translate-y-full scale-90">
          <img src="/hjerte_datavis_22.webp" alt="Hjerte" class="w-1/3 h-1/3 md:w-22p md:h-22p ml-10 lg:ml-32 xl:ml-40" />
        </div>

        <!-- Animation 3: Skraldespand -->
        <div
          x-data="{ visible: false }"
          x-intersect:enter="visible = true"
          x-bind:class="{ 
              'opacity-100 translate-x-0 scale-100 animate__animated animate__bounce animate__subtle-rotate': visible, 
              'opacity-0 -translate-x-full scale-90': !visible 
          }" 
          class="flex items-center space-x-4 transition duration-3000 ease-out delay-150 transform opacity-0 -translate-x-full scale-90">
          <img src="/skrald_datavis_8.webp" alt="Skraldespand" class="w-1/5 h-1/5 md:w-8p md:h-8p ml-52 lg:ml-64 xl:ml-72" />
        </div>
      </section>
    </div>
  </article>
</div>


<style>
@keyframes subtleRotate {
  0% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(8deg); /* En lille vippe til højre */
  }
  50% {
    transform: rotate(-8deg); /* En lille vippe til venstre */
  }
  100% {
    transform: rotate(0deg); /* Tilbage til startposition */
  }
}
.animate__subtle-rotate {
  animation: subtleRotate 1s ease forwards; /* Juster varigheden efter behov */
}

@keyframes swim {
  0% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
  100% { transform: translateY(0); }
}

.fish-animation {
  animation: swim 1.5s ease-in-out infinite;
}
</style>
