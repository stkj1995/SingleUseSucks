<script>
    document.addEventListener("DOMContentLoaded", () => {
    const counterElement = document.getElementById("count-up");
    const targetNumber = 15936;
    const speed = 500; // Adjust speed for faster or slower counting

    const updateCount = () => {
        const startValue = parseInt(counterElement.innerText.replace(".", ""));
        const increment = Math.ceil(targetNumber / speed);

        if (startValue < targetNumber) {
            counterElement.innerText = new Intl.NumberFormat("de-DE").format(startValue + increment);
            setTimeout(updateCount, 20);
        } else {
            counterElement.innerText = new Intl.NumberFormat("de-DE").format(targetNumber);
        }
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                updateCount();
                observer.unobserve(entry.target); // Stop observing after animation
            }
        });
    });

    observer.observe(counterElement);
});

</script>